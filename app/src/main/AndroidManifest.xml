<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".Game"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/background"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SquarePuzzle"
        tools:targetApi="31">
        <activity
            android:name=".ui.activity.MainActivity"
            >

        </activity>
        <activity android:name="com.haiprj.games.squarepuzzle.ui.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.haiprj.games.squarepuzzle.ui.activity.GameActivity" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="${APP_ID}"/>
    </application>

</manifest>